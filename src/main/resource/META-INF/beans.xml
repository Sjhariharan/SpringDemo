	     <bean id="car" class="Qspider.DependencyInjection.dto.Car">
	     <property name="carId" value="1"/>
	     <property name="name" value="audi"/>
	     <property name="model" value="A-2"/>
	     <property name="engine" ref="eng"/>
	     </bean>
	     
	     <bean id="eng" class="Qspider.DependencyInjection.dto.Engine">
		  <property name="engId" value="1"/>
		  <property name="name" value="a-ww"/>
		  <property name="type" value="four-wheel"/>
